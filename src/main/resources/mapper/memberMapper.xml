<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bscalendar.member.mapper.MemberMapper">
	<select id="findByUsername" resultType="com.bscalendar.member.dto.MemberDTO">
		SELECT
			*
		FROM
			EG_MEMBER
		WHERE
			MEM_ID = #{mem_id}
	</select>
	
	<select id="findRefreshToken">
		SELECT
			REFRESH_TOKEN
		FROM
			EG_MEMBER
		WHERE
			MEM_ID = #{mem_id}
	</select>
	
	<update id="refreshTokenUpdate">
		UPDATE EG_MEMBER SET REFRESH_TOKEN = #{refresh_token} WHERE MEM_ID = #{mem_id}
	</update>
</mapper>